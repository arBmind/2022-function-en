section.title
  background-color $color-heading
  h1, h2
    color $color-inverse
    margin 0
  header
    margin-bottom 200px
  footer
    margin-top 100px
  p
    color #000

section.subtitle
  background-color $color-titel-canvas
  h1, h2
    color $color-inverse
  p
    color $color-highlight

section.source
  h2
    margin: 0
  pre.source
    margin-top: .2em
    margin-bottom: .2em

section.s54x11
  pre.source
    font-size 100%
    line-height 1.5

section.s54x13
  pre.source
    font-size 100%
    line-height 1.3
    code
      line-height 1.3
  .code-toolbar > .toolbar
    display none

section.s67x16
  pre.source
    font-size 0.8em
    line-height 1.3
    code
      line-height 1.3
    pre.source
      font-size 100%

section.s90x23
  pre.source
    font-size 0.6em
    line-height 1.2
    code
      line-height 1.2
    pre.source
      font-size 100%

section.s90x30
  pre.source
    font-size 0.5em
    line-height 1.1
    code
      line-height 1.1
    pre.source
      font-size 100%
